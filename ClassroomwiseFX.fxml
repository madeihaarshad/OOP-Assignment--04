<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ClassroomwiseFXController">
    <children>
        <VBox alignment="CENTER" fillWidth="false" layoutX="10.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="600.0" spacing="10.0" style="-fx-background-color: white;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Classroomwise Timetable" textFill="#861515" underline="true" wrapText="true" />
            <ListView fx:id="listBoxSections" prefHeight="210.0" prefWidth="550.0" />
            <ListView fx:id="listBoxDetails" prefHeight="210.0" prefWidth="550.0" />
            <TextField fx:id="textBoxRoom" promptText="Room" />
            <TextField fx:id="textBoxTeacherName" promptText="Teacher Name" />
            <TextField fx:id="textBoxCourse" promptText="Course" />
            <TextField fx:id="textBoxDay" promptText="Day" />
            <TextField fx:id="textBoxStartTime" promptText="Start Time" />
            <TextField fx:id="textBoxEndTime" promptText="End Time" />
            <TextField fx:id="textBoxSection" promptText="Section" />
            <Button fx:id="showDataButton" style="-fx-background-color: #BC8F8F;" text="Show Data" textFill="WHITE" />
            <Button fx:id="addButton" onAction="#addRoom" style="-fx-background-color: #BC8F8F;" text="Add Record" textFill="WHITE" />
            <Button fx:id="deleteButton" onAction="#deleteRoom" style="-fx-background-color: #BC8F8F;" text="Delete Record" textFill="WHITE" />
        </VBox>
    </children>
</AnchorPane>
